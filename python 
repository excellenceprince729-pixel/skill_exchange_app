from flask import Flask, request, jsonify
from flask_sqlalchemy import SQLAlchemy
from flask_marshmallow import Marshmallow
import os

app = Flask(__name__)

# Database configuration
basedir = os.path.abspath(os.path.dirname(__file__))
app.config['SQLALCHEMY_DATABASE_URI'] = 'sqlite:///' + os.path.join(basedir, 'skill_exchange.db')
app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False

db = SQLAlchemy(app)
ma = Marshmallow(app)

# --- DATABASE MODELS ---

class User(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    username = db.Column(db.String(50), unique=True, nullable=False)
    bio = db.Column(db.String(200))
    # Relationship: One user can have many skills
    skills = db.relationship('Skill', backref='owner', lazy=True)

class Skill(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    name = db.Column(db.String(100), nullable=False)
    category = db.Column(db.String(50)) # e.g., 'Programming', 'Cooking'
    skill_type = db.Column(db.String(20)) # 'Offer' or 'Request'
    user_id = db.Column(db.Integer, db.ForeignKey('user.id'), nullable=False)

# --- SCHEMAS (For Flutter Compatibility) ---

class SkillSchema(ma.SQLAlchemyAutoSchema):
    class Meta:
        model = Skill

class UserSchema(ma.SQLAlchemyAutoSchema):
    skills = ma.Nested(SkillSchema, many=True)
    class Meta:
        model = User

user_schema = UserSchema()
users_schema = UserSchema(many=True)
skill_schema = SkillSchema()
skills_schema = SkillSchema(many=True)

# --- API ENDPOINTS ---

@app.route('/register', methods=['POST'])
def register():
    username = request.json['username']
    bio = request.json.get('bio', '')
    new_user = User(username=username, bio=bio)
    db.session.add(new_user)
    db.session.commit()
    return user_schema.jsonify(new_user)

@app.route('/add-skill', methods=['POST'])
def add_skill():
    data = request.json
    new_skill = Skill(
        name=data['name'],
        category=data['category'],
        skill_type=data['skill_type'],
        user_id=data['user_id']
    )
    db.session.add(new_skill)
    db.session.commit()
    return skill_schema.jsonify(new_skill)

@app.route('/feed', methods=['GET'])
def get_feed():
    # Gets all skills offered by everyone to display in the Flutter list
    all_skills = Skill.query.filter_by(skill_type='Offer').all()
    return skills_schema.jsonify(all_skills)

if __name__ == '__main__':
    with app.app_context():
        db.create_all()
    app.run(debug=True, host='0.0.0.0') # host='0.0.0.0' allows mobile devices to connect
